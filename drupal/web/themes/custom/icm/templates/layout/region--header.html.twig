{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set classes = ['region', 'region-' ~ (region|clean_class), 'row', 'align-items-center'] %}
{% if content %}
	<div class="blue-angle">
		{# just a decorative blue angle at the top-left of the screen #}
	</div>
	<div class="white-fade-overlay">
		{# just a decorative blue angle at the top-left of the screen #}
	</div>
	<div class="header-placeholder row" data-aos="stick" data-aos-anchor-placement="top-top" data-aos-offset="10">
		{# placeholder that prevents content from jumping when the user scrolls down #}
	</div>

	<div {{ attributes.addClass(classes) }}
		data-aos="stick"
		data-aos-id="sticky-header"
		data-aos-anchor-placement="top-top">
		{{ content }}
	</div>
{% endif %}
