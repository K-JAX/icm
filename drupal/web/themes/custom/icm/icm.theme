<?php
/**
 * Theme hooks
 */

function icm_theme_suggestions_block_alter(array &$suggestions, array $variables)
{
    $uglyName      = $variables['elements']['#configuration']['label'];
    $lCaseName     = strtolower($uglyName);
    $blockName     = str_replace(' ', '_', str_replace("'", '', $lCaseName));
    $suggestions[] = 'block__' . $blockName;
}
